.nav{
  display: flex;
  height: 30px;
  text-align: center;
  line-height: 30px;
  background: #fff;
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 22;
}
.nav-li{
  flex: 1;
color:#666;
font-size: 12px;
border-bottom: 1px solid #f5f5f5;
}
.nav-li:nth-child(1){
  border-right: 1px solid #f5f5f5;
}
.active{
  color:#e55949;
  border-bottom: 1px solid #e55949;
}




 .con-right-class{
  border-bottom: 1px solid #ddd;
  display: flex;
  border-left:1px solid #ddd;
  padding: 7px;
  margin-top: 30px;
}
.ific_img{
  flex: 1.5;
  border-right: 1px solid #f5f5f5;
}
.ific_img image{
  width: 100%;
  height:80%;
  margin-top: 10%;
}
.ific_font{
  flex:3;
  margin-left: 10px;
  line-height: 22px;
}
.time{
  flex:1;
  font-size: 12px;
  color: #666;
}
.ific_font :nth-child(1){
  font-size: 13px;
  
}
.goods_money{
  font-size: 12px;
}
.goods_money text{
  font-size: 10px !important;
  color: #ddd;
  border-bottom:1px solid #ddd;
  height: 10px;
  display: inline-block;
  text-align: center;
  padding: 0 2px;
  margin-left: 4px;
}
.sale{
  font-size: 10px;
  color: #999;
} 


.nomore{
  font-size:14px;
  background:#f1f1f1;
  color:#999;
  line-height:25px;
  text-align:center;
}