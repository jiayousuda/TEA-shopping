.top{
  height: 140px;
  width: 100%;
  background: #B28232; 
  position: fixed;
  top: 0;
  z-index: 100
}
.top .row{
  padding: 10px 15px;
}
.cen{
  width: 100%;
}
.top .center{
  border-radius: 50%;
  width: 80px;
  height: 80px;
  border: 2px solid #fff;
  text-align: center;
  color: #3b3001;
  font-size: 18px;
  position: absolute;
  line-height: 80px;
}
.fixed-share{
  background: #3b3001;
  color: #fff;
}
.container{
  margin-top: 140px;
}
page{
  background: #fff;
}
.his_list{
  margin-top:88rpx;
}
.status-box{
    height: 88rpx;
    line-height: 88rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    position: fixed;
    top:140px;
    width: 100%;
    overflow: hidden;
    z-index: 100;
}
.status-box .status-label{
    width: 50%;
    height: 100%;
    text-align: center;
    font-size:28rpx;
    color:#353535;
    box-sizing: border-box;
    position: relative;
}
.status-box .status-label.active{
    color:#353E3B;
    border-bottom: 6rpx solid #353E3B;
}
.status-box .status-label .red-dot{
    width: 16rpx;
    height: 16rpx;
    position: absolute;
    left: 116rpx;
    top:23rpx;
    background-color: #f43530;
    border-radius: 50%;
}




.his_tit{
  height:40px;
line-height:40px;
  font-size: 14px;
  color: #333;
  position: relative;
  background: #f5f5f5;
}
.tit_left{
position: absolute;
left:10px;
}
.tit_right{
position: absolute;
right:10px;
}


.his_li{
  display: flex;
  padding: 5px 10px;
  border-bottom: 1px solid #f5f5f5;
  line-height: 23px;
}
.li_left{
  flex: 1;
  text-align: left;
}
.li_right{
  flex: 1;
  text-align: right;
}
.his_money{
  font-size: 14px;
  color: #333;
}
.chongzhi,.his_resule,.his_time{
  font-size: 12px;
  color: #666;
}
.nomore{
  font-size:14px;
  background:#f1f1f1;
  color:#999;
  line-height:25px;
  text-align:center;
  margin-top: -10px;
}
