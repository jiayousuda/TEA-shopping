.UI-toast {
  position: fixed;
  top: 35%;
  left: 20%;
  transform: translateZ(0) translateY(-100%);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  font-size: 14px;
  width: 60%;
  line-height: 1.5em;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 10px;
  text-align: center;
  border-radius: 4px;
  z-index: 100;
}
.pas{
  background: #fff;
  position: relative;
  z-index: 10; 
}
.pop{
position:fixed;
top:0;
left:0;
z-index:98;
width:100%;
height:100%;
background:rgba(0,0,0,0.4);
}

.dialog{
  height:180px;
width:90%;
margin:0 auto;
background:#fff;
margin-top:20px;
border-radius: 6px;
}
.itemStyle {
  width: 80rpx;
  height: 80rpx;
    background: #fff;
  border-radius: 6rpx;
  border: 1rpx solid #dadada;
  overflow: hidden;
  position: relative;
}
.pas_input {
  border: 0;
  color:#fff;
  font-size: 24rpx;
   height: 80rpx; 
   opacity: 0; 
  overflow: hidden;
  position: absolute;
   z-index: 2; 
  left: 0;
   width: 100%; 
   bottom: 57px;
   
}

.nextStyle {
  width: 100%;
  height: 100rpx;
  background-color: #3cb371;
  color: #fff;
  font-size: 34rpx;
  position: fixed;
  bottom: 0px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.backgroundViewStyle {
  background: white;
  margin-top: 30rpx;
  border-top: 1rpx solid #e5e5e5;
}

.headTextStyle {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.pwdInputStyle {
height:100rpx;
display:flex;
align-items:center;
justify-content:center;
margin-bottom:10px;
/* position: relative; */
}

.PwdStyle {
  width: 20rpx;
  height: 20rpx;
  background: black;
  border-radius: 10rpx;
  position: absolute;
  left: 16px;
  top: 16px;
}

.leftRightMarginStyle {
  margin: 0px 30rpx;
}

.pop .dialog .pop-title {
  font-size: 13px;
  line-height: 44px;
  text-align: center;
  color: #666;
  border-bottom: 1px solid #B28232;
}
.pop .dialog .jg{
font-size:20px;
color:#B28232;
text-align:center;
line-height:40px;
}
.pop .dialog .pop-title .close {
  color: #999;
  font-size: 18px;
  border: 1px solid #999;
  border-radius: 50%;
  padding: 0px 5px;
  position: absolute;
  height: 20px;
  line-height: 20px;
  right: 10px;
  top: 5px;
  width: 10px;
}

.pop .dialog .btn {
  display: flex;
  line-height: 45px;
  text-align: center;
  font-size: 14px;
}

.pop .dialog .btn .btn-left {
  flex: 1;
  background: #ebebeb;
  color: #999;
}

.pop .dialog .btn .btn-right {
  flex: 1;
  background: #B28232;
  color: #fff;
}
